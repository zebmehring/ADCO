/* variable declarations */
vars {
  int<8> w;
  int<8> x;
  int<8> y;
  int<8> z;
  chan<8> a;
}

/* chp program */

chp {
  x := (3 + 4) * 2 ;                              // x = 00001110
  y := -1 + 0 * 4 + 3 ;                           // y = 00000010
  z := 1 * x - x * y ;                            // z = 11110010
  (w := 15 * y - x + 4 , z := (y - x) * 3 + 1 ) ; // w = 00010100, z = 11011101
  a ! (x * y) ;
  a ? w                                           // w = 00011100
}
